<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvSubjectTitle"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:text="Title"
        android:padding="2dp"
        android:gravity="center"
        android:textSize="13dp"
        />
    <TextView
        android:id="@+id/tvSubjectNote"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:text="Note 1"
        android:textSize="13dp"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/tvSubjectNote2"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:text="Note 2"
        android:textSize="13dp"
        android:gravity="center"


        />

    <TextView
        android:id="@+id/tvSubjectNote3"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:text="Note 3"
        android:textSize="13dp"
        android:gravity="center"

        />


    <TextView
        android:id="@+id/tvSubjectNoteFinal"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:text="Note Final"
        android:textSize="13dp"
        android:gravity="center"

        />



</LinearLayout>